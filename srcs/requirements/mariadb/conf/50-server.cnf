# Configuration file for MySQL server

	# Configuration section for the MySQL server
[mysqld]
	# Set the user for the MySQL server
user = root 
	# Set the port number for the MySQL server
port = 3306
	# Set the directory for storing MySQL data
datadir = /var/lib/mysql
	# Set the socket file for communication with MySQL server
socket = /var/run/mysqld/mysqld.sock
	# Set the IP address to bind MySQL server to (* means all available network interfaces)
bind-address = *